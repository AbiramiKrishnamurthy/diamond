#include<iostream.h>
using namespace std;
#include<conio.h>
void main()
{
int i,n,j;
cin>>n;
for(i=1;i<=n;i++)
{
for(j=1;j<=n-i;j++)
{
cout<<" ";
for(j=1;j<i;j++)
{
cout<< " *";

}
cout<< "\n";
}
}
for(i=n;i>0;i--)
{
for(j=1;j<=n-i;j++)
{
cout<<" ";
for(j=1;j<i;j++)
{
cout<< " *";

}
cout<< "\n";
}
}
